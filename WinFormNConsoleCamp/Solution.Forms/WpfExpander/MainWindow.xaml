<Window
    x:Class="WpfExpander.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfExpander"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />

        </Grid.ColumnDefinitions>
        <StackPanel Background="LightBlue">
            <TextBox FontSize="16" Text="Name" />
            <Expander Header="More details">
                <TextBox FontSize="16" Text="Description" />
            </Expander>
            <Button
                x:Name="BtnDetails"
                Width="100"
                Height="25"
                Click="BtnDetails_Click"
                Content="Details" />
        </StackPanel>

        <Expander
            x:Name="ExpDetail"
            Grid.Column="1"
            Background="Teal"
            BorderThickness="0"
            ExpandDirection="Left">
            <Rectangle Width="125" Fill="Teal" />
        </Expander>

    </Grid>

</Window>
