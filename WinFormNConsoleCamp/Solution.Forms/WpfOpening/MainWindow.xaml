<Window
    x:Class="WpfOpening.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfOpening"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Button
                x:Name="BtnNormal"
                Width="100"
                Height="40"
                Margin="5"
                Click="BtnNormal_Click"
                Content="Normal" />
            <Button
                x:Name="BtnModal"
                Width="100"
                Height="40"
                Margin="5"
                Click="BtnModal_Click"
                Content="Modal" />
            <TextBox
                x:Name="TbInput"
                Width="200"
                Height="40"
                VerticalContentAlignment="Center"
                FontSize="20" />
        </StackPanel>
    </Grid>
</Window>
