<Window
    x:Class="WpfMVVM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfMVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodel="clr-namespace:WpfMVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
    Title="MainWindow"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding AddCommand}"
                Content="Add" />
            <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding DeleteCommand}"
                Content="Delete" />
            <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding SaveCommand}"
                Content="Save" />

        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            
            <!-- 그리드뷰 -->
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Width="1*"
                        Header="Id"
                        Binding="{Binding Id}"/>
                    <DataGridTextColumn
                        Width="4*"
                        Binding="{Binding Name}"
                        Header="Name" />
                    <DataGridTextColumn
                        Width="3*"
                        Binding="{Binding SerialNumber}"
                        Header="Seral Number" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Quantity}"
                        Header="Quantity" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- TextBox -->
            <StackPanel Grid.Column="1">
                <Label Content="ID" />
                
                <TextBlock Margin="5,0, 5, 15"
                    Text="{Binding SelectedItem.Id, 
                    UpdateSourceTrigger=PropertyChanged}" />
                
                <Label Content="Name" />
                
                <TextBox 
                    Margin="5,0,5,15" 
                    Text="{Binding 
                    SelectedItem.Name, 
                    UpdateSourceTrigger=PropertyChanged
                    }" />
                
                <Label Content="Serial Number" />
                
                <TextBox 
                    Margin="5,0,5,15" 
                    Text="{Binding 
                    SelectedItem.SerialNumber, 
                    UpdateSourceTrigger=PropertyChanged}" />
                
                <Label Content="Quantity" />
                
                <TextBox 
                    Margin="5,0,5,15" 
                    Text="{Binding 
                    SelectedItem.Quantity, 
                    UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="2">
            <TextBlock 
                Width="200"
                Height="40"
                Padding="0 5 0 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="24"
                Text="고객정보" />

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding AddCustomerCommand}"
                Content="Add" />
                <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding DeleteCommand}"
                Content="Delete" />
                <Button
                Width="75"
                Height="30"
                Margin="0,0,50,0"
                Command="{Binding SaveCustomerCommand}"
                Content="Save" />

            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                HeadersVisibility="Column"
                ItemsSource="{Binding Customers}">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Width="2*"
                        Header="Id"
                        Binding="{Binding Id}"/>
                    <DataGridTextColumn
                        Width="8*"
                        Binding="{Binding Name}"
                        Header="Name" />
                </DataGrid.Columns>

            </DataGrid>
        </Grid>
    </Grid>
</Window>
